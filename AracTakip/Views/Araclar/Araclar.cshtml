@model List<AracTakipSistemi.DAL.Concrete.tbl_Arac>
@{
    ViewBag.Title = "Araclar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Araçlar Tablosu</h4>
    </div>
    <div class="pb-20">
        <table class="data-table table hover multiple-select-row nowrap" id="CihazTable">
            <thead>
                <tr>
                    <th scope="col">Araç Plaka</th>
                    <th scope="col">Araç Şasi No</th>
                    <th scope="col">Renk</th>
                    <th scope="col">Araç Yılı</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="table-plus">@item.Plaka</td>
                        <td scope="row">@item.SasiNo</td>
                        <td scope="row">@item.Renk</td>
                        <td scope="row">@item.Yil</td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="/Araclar/DeleteArac/@item._id"><i class="dw dw-delete-3"></i> Sil</a>
                                    <a class="dropdown-item" href="/Araclar/GetArac/@item._id"><i class="dw dw-edit2"></i> Güncelle</a>

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

