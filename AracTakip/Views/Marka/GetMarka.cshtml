@model AracTakipSistemi.DAL.Concrete.tbl_Marka
@{
    ViewBag.Title = "GetMarka";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Oluştur</h2>
<br />
<div class="row">
    <div class="col-md-4">
        <label>Marka ADI</label>
        <input type="text" class="form-control" id="MarkaAD" value="@Model.MarkaAD">
    </div>
</div>
<br />
<input type="button" class="btn btn-success" value="Markayı Güncelle" onclick="UpdateMarka()" />

<script type="text/javascript">

    function UpdateMarka() {
        var ad = $("#MarkaAD").val();
        var id = '@Model._id';
        $.ajax({
            url: "/edit-marka",
            dataType: "json",
            type: "POST",
            data: {id:id,MarkaAD: ad },
            success: function (deger) {
                window.location.replace("/get-all-marka");
            }
        });


    }
</script>
