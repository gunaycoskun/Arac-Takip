@model List<AracTakipSistemi.DAL.Concrete.tbl_Model>
@{
    ViewBag.Title = "CreateMarka";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Oluştur</h2>
<br />
<div class="row">

    <div class="col-md-4">
        <label>Marka ADI</label>
        <input type="text" class="form-control" id="MarkaAD">
    </div>
    <input type="button" class="btn btn-success form-group" onclick="SaveMarka()" style="margin-bottom:0px; margin-top:34px;" value="Marka Modeli Kaydet"/>
</div>
<script>
    function SaveMarka() {
        $.ajax({
            url: "save-marka",
            dataType: "json",
            type: "POST",
            data: { MarkaAD: $("#MarkaAD").val(), ModelID: $("#ModelTip").val() },
            success: function(data) {
                window.location.replace("/get-all-marka");
            }
        });
    }
</script>