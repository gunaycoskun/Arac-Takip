@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <form>

        <div class="form-group">

            <div class="row" style="text-align:center;">
                <img style="height:80%;" src="~/Folder/img/aractakipgif.gif" />
            </div>
            <div class="row" style="text-align:center;">
                <input name="GirisTipi" type="radio" value="Calisan" id="radioCalisan" checked/><label style="margin-right:50px;">Çalışan</label>
                <input name="GirisTipi" type="radio" value="Müsteri" id="radioMusteri"/><label>Müşteri</label>
            </div>
            <div class="row" style="text-align:center;" id="Calisan">
                <div class="col-md-4"></div>
                <div class="col-md-4" id="girisPaneli" style="line-height: 2;">
                    <label>Kullanıcı Adı</label><br />
                    <input type="text" id="txtKullanici" class="form-control" />
                    <label>Parola</label>
                    <input type="password" id="txtParola" class="form-control" />
                    <br />
                    <input type="button" class="btn btn-success" value="Giriş" onclick="Giris()" />
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="row" style="text-align:center;" id="Musteri" >
                <div class="col-md-4"></div>
                <div class="col-md-4" id="girisPaneli" style="line-height: 2;">
                    <label>TC</label><br />
                    <input type="text" id="txtTC" class="form-control" />
                    <label>Plaka</label>
                    <input type="text" id="txtPlaka" class="form-control" />
                    <br />
                    <input type="button" class="btn btn-success" value="Giriş" onclick="MusteriGiris()" />
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </form>

    <script>
        var calisan = $("#Calisan");
        var musteri = $("#Musteri");
        $(document).ready(function () {
            musteri.hide();
        });
        
        $('input[type=radio][name=GirisTipi]').change(function () {
            if (this.value == 'Calisan') {
                calisan.show();
                musteri.hide();
            }
            else if (this.value == 'Müsteri') {
                musteri.show();
                calisan.hide();
            }
        });
        function Giris() {
            var kullanici = $("#txtKullanici").val();
            var parola = $("#txtParola").val();
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "PanelGiris",
                data: { Kullanici: kullanici, Parola: parola },
                success: function (data) {
                    window.location.replace("/get-all-cihaz");
                }

            });
        }
        function MusteriGiris() {
            var TC = $("#txtTC").val();
            var plaka = $("#txtPlaka").val();
            $.ajax({
                type: "POST",
                dataType: "json",
                url: "/harita-getir",
                data: { TC: TC, plaka: plaka },
                success: function (data) {
                    window.location.replace("get-harita?id="+data);
                }

            });
        }

    </script>
</body>
</html>
