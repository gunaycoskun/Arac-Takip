@model List<AracTakipSistemi.DAL.Concrete.tbl_Users>
@{
    ViewBag.Title = "Kullanicilar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Kullanicilar</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Kullanıcı AD</th>
            <th scope="col">Tarhi</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.KullaniciAdi</td>
                <td scope="row">@item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td><a href="/Kullanicilar/DeleteKullanicilar/@item._id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Kullanicilar/GetKullanicilar/@item._id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>
